# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Admin User IDs (comma-separated Discord user IDs with permission to use admin commands)
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
DATABASE_PATH=data/pro4kings.db
DATABASE_BACKUP_PATH=data/backups

# Scraper Settings
# ðŸ”¥ OPTIMIZED: Conservative limits for panel.pro4kings.ro shared hosting (30 connection limit)
SCRAPER_MAX_CONCURRENT=5
SCRAPER_RATE_LIMIT=10.0
SCRAPER_BURST_CAPACITY=20

# VIP Player Tracking - Monitor specific high-priority players
# Add player IDs separated by commas to track their actions with higher priority
# VIP actions are scanned every 10 seconds instead of 30 seconds
VIP_PLAYER_IDS=1,799,1207,9,64,100,14,69,215,141,4,46,51
VIP_SCAN_INTERVAL=10

# Online Player Priority Tracking - Automatically track all currently online players
# This ensures actions from active players are saved before initial scan completes
# Particularly useful for backing up data from online players during bot startup
TRACK_ONLINE_PLAYERS_PRIORITY=true
ONLINE_PLAYERS_SCAN_INTERVAL=15

# Task Intervals (in seconds)
SCRAPE_ACTIONS_INTERVAL=30
SCRAPE_ONLINE_INTERVAL=60
UPDATE_PROFILES_INTERVAL=120
CHECK_BANNED_INTERVAL=3600
TASK_WATCHDOG_INTERVAL=300

# Data Retention (in days)
ACTIONS_RETENTION_DAYS=90
LOGIN_EVENTS_RETENTION_DAYS=30
PROFILE_HISTORY_RETENTION_DAYS=180

# Batch Sizes
ACTIONS_FETCH_LIMIT=200
PROFILES_UPDATE_BATCH=200

# Logging Configuration
LOG_FILE_PATH=bot.log
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Error Notifications
ENABLE_ERROR_NOTIFICATIONS=true
ERROR_NOTIFICATION_COOLDOWN=300
